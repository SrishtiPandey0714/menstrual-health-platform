# Database Configuration
# For local MongoDB (if installed):
COSMOS_DB_URI=mongodb://localhost:27017/menstrual-health

# For Azure Cosmos DB (MongoDB API):
# COSMOS_DB_URI=mongodb://YOUR_COSMOS_ACCOUNT:YOUR_KEY@YOUR_COSMOS_ACCOUNT.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retryWrites=false

# Authentication (Development Mode - uses mock authentication)
USE_MOCK_AUTH=true
NODE_ENV=development

# Azure OpenAI Configuration (Optional - for AI chat feature)
# AZURE_OPENAI_ENDPOINT=https://YOUR_ENDPOINT.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_api_key_here
# AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Azure Translator Configuration (Optional - for multilingual support)
# AZURE_TRANSLATOR_KEY=your_translator_key
# AZURE_TRANSLATOR_REGION=your_region

# Server Port
PORT=5000
